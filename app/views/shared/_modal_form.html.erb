<h4 class="modal-title" id="myModalLabel">Contacts Details</h4>
<%= f.fields_for :contact_details do |contact| %>
  <div class="form-group">
    <%= contact.text_field :first_name, :placeholder=>"First Name" %>          
    <%= contact.text_field :last_name, :placeholder=>"Last Name" %>
  </div>
<%end%>

<h4 class="modal-title" id="myModalLabel">Personal Details</h4>
<%= f.fields_for :personal_detail do |personal|%>
  <div class ="form-group">
    <%= personal.text_field :address , :placeholder=>"Address"%>
    <%= personal.text_field :email, :placeholder=>"Email" %>
    <%= personal.text_field :website, :placeholder=>"Website" %>
    <%= f.fields_for :phone do |phone|%>
      <%= phone.text_field :cell_phone , :placeholder=>"01-4298822"%>
      <%= phone.text_field :landline , :placeholder=>"9841234567"%>
    <%end%>
  </div>
<%end%>

<h4 class="modal-title" id="myModalLabel">Office Details</h4>
<%= f.fields_for :office_detail do |office|%>
  <div class ="form-group">
    <%= office.text_field :office_name , :placeholder=>"Company's Name"%>
    <%= office.text_field :office_address , :placeholder=>"Address"%>
    <%= office.text_field :office_email, :placeholder=>"Email" %>
    <%= office.text_field :office_website, :placeholder=>"Website" %>
    <%= f.fields_for :phone do |phone|%>
      <%= phone.text_field :cell_phone , :placeholder=>"01-4298822"%>
      <%= phone.text_field :landline , :placeholder=>"9841234567"%>
    <%end%>
  </div>
<%end%>