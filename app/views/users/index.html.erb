<center>
  <h1>Contacts Page</h1>

<%= link_to "Add Contacts", "",id: "add_new_contact",:remote=>true %>

<table style="width:70%" >
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  <% @contacts.each do |contact|%>
  <tr>
    <td><%=contact.full_name %></td>
    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Show</button>
    <%= link_to "Edit" , edit_contact_path(contact)%>
    <%= link_to "Delete" , contact_path(contact)%></td>
  </tr>
  <% end %>
</table>
</center>

<%= render 'layouts/modal' %>
<%= render 'layouts/modal_show' %>
